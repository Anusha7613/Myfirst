
@model Myfirst.Models.CustomerViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Creating New Customer Details</h2>
<div class="container">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Customer.Name)
                @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Customer.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Customer.DateofBirth)
                @Html.TextBoxFor(c => c.Customer.Address, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(c => c.Customer.DateofBirth)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Customer.Address)
                @Html.TextBoxFor(c => c.Customer.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Customer.Address)
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Customer.MembershipId)

                @Html.DropDownListFor(c => c.Customer.Membership, new SelectList(Model.GetMemberships, "Id", "Membershiptype"), "--select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Customer.MembershipId)
            </div>
            @*<div class="form-group">
                @Html.LabelFor(c => c.Customer.Gender)
                @Html.DropDownListFor(c => c.Customer.Gender, new SelectList(Model.Gender,"Value", "Text"), new { @class = "form-control" })
            </div>*@

            <div class="form-group">
                <button id="cmdSubmit" type="Submit" class="btn btn-outline-success">Edit</button>
            </div>
        }
    </div>
</div>


